{
  "name": "Zed Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "installSudo": "true"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest",
      "serverPort": 2222,
      "passwordAuth": "false"
    }
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh/id_ed25519.pub,target=/home/vscode/.ssh/authorized_keys,consistency=cached"
  ],
  "remoteUser": "vscode",
  "forwardPorts": [2222]
}
